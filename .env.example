# ChapChap Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Django Settings
SECRET_KEY=your-secret-key-here
DEBUG=True

# Database (SQLite for local development)
DATABASE_URL=sqlite:///db.sqlite3

# AI Model selection
AI_MODEL_SUMMARIZATION=sshleifer/distilbart-cnn-12-6
AI_MODEL_CLASSIFICATION=facebook/bart-large-mnli
AI_MODEL_TEXT_GENERATION=microsoft/phi-2

# Social Media API Credentials
# ===========================
# These would be needed for actual API integration

# X (Twitter) API
X_API_KEY=your-x-api-key-here
X_API_SECRET=your-x-api-secret-here
X_ACCESS_TOKEN=your-x-access-token-here
X_ACCESS_TOKEN_SECRET=your-x-access-token-secret-here
X_BEARER_TOKEN=your-x-bearer-token-here

# X OAuth 2.0 Configuration (for user authentication)
X_CLIENT_ID=your-x-oauth-client-id-here
X_CLIENT_SECRET=your-x-oauth-client-secret-here

# Facebook/Instagram API Credentials
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
INSTAGRAM_APP_ID=your-instagram-app-id
INSTAGRAM_APP_SECRET=your-instagram-app-secret

# LinkedIn API Credentials
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

# AI Model API Keys (Optional - for enhanced content adaptation)
OPENAI_API_KEY=your-openai-api-key
HUGGINGFACE_API_KEY=your-huggingface-api-key
OPENROUTER_API_KEY=your-openrouter-api-key

# Additional Platform APIs (Optional)
TIKTOK_API_KEY=your-tiktok-api-key
YOUTUBE_API_KEY=your-youtube-api-key

# Additional settings
REDIS_URL=redis://localhost:6379
